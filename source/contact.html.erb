  	<link rel="stylesheet" href="/css/styles.css">
  	<link href="webfonts/ss-social.css" rel="stylesheet" />
  	<link href="webfonts/ss-standard.css" rel="stylesheet" />
  	<link href='http://fonts.googleapis.com/css?family=PT+Sans:400,700,400italic' rel='stylesheet' type='text/css'>
    <script type="text/javascript" src="//use.typekit.net/tpn0qjo.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  </head>
  <body>

    <div class="wrapper">
      <div id="header">
        <div id="logo">
          <a href="/"><img alt="Jumpstart Lab" src="/images/logo-bw.png"></a>
		    </div>
        <ul id="nav">
          <li><a href="news">News</a></li>
          <li><a href="courses">Courses</a></li>
          <li><a href="http://tutorials.jumpstartlab.com">Tutorials</a></li>
          <li><a href="team">Team</a></li>
          <li class="active"><a href="contact">Contact</a></li>
        </ul>
      </div>
    </div>

    <div id="main">

      <div class="wrapper">
        <h1>Contact Us</h1>

        <div class="section">
          <dl class="contact-info">
            <% ContactPoint.all.each do |point| %>
              <dt><%= point.type.capitalize %></dt>
              <dd><%= point.tag %></dd>
            <% end %>
              </dl>
          <h2>Send Us A Message <span>and we'll get back to you right away!</span></h2>
          <form id="send_us_a_message_form" method="post" action="/contact/#send_us_a_message_form">
            <label for="form_custom_data_your_name_value">Your Name <span class="required">(Required)</span></label>
            <input id="form_custom_data_your_name_value" name="form[custom_data][your_name][value]" type="text">
            <label for="form_custom_data_your_email_value">Your Email <span class="required">(Required)</span></label>
            <input id="form_custom_data_your_email_value" name="form[custom_data][your_email][value]" type="text">
            <label for="form_custom_data_your_message_value">Your Message <span class="required">(Required)</span></label>
            <textarea cols="60" id="form_custom_data_your_message_value" name="form[custom_data][your_message][value]" rows="4"></textarea>
            <input type="submit" value="Submit">
          </form>
        </div>

        <%= partial :aside %>
      </div>

      <%= partial :footer %>
  </body>
</html>