<div id="bottom">
    <div class="wrapper">
      <div class="contact">
        <h2>Contact Us</h2>
        <dl class="contact-info">
          <% ContactPoint.all.each do |point| %>
            <dt><%= point.type.capitalize %></dt>
            <dd><%= point.tag %></dd>
          <% end %>
        </dl>
      </div>
      <img class="logo-mark" src="/images/logo-mark.png" />
      <div class="connect">
        <h2>Stay Connected</h2>
        <p>Get the scoop on upcoming classes.</p>
        <form>
          <input type="text" placeholder="Your email address" />
          <input type="submit" value="Subscribe" />
        </form>
        <ul>
          <li class="twitter">
            <a href="<%= ContactPoint.twitter.url %>" class="ss-icon ss-social">Twitter</a>
          </li>
          <li class="github">
            <a href="<%= ContactPoint.github.url %>" class="ss-icon ss-social">GitHubOctocat</a>
          </li>
          <li class="rss"><a href="#" class="ss-icon ss-social">RSS</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>

